@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio - Loboteca</title>
    <link rel="stylesheet" href="~/css/inicio.css">
</head>
<body>
    <!-- Barra de navegación -->
    <header>
        <nav class="navbar"></nav>

        <nav class="navbar2">
            <ul>
                <li><img src="~/images/libros.png" alt="libros" class="libros"> <a href="#" class="libros-link">Libros</a></li>
                <li><img src="~/images/contacto.png" alt="Contacto" class="contacto"><a href="#">Contacto</a></li>
                <li><img src="~/images/nosotros.png" alt="nosotros" class="nosotros"><a href="#">Nosotros</a></li>
                <li><img src="~/images/login.png" alt="perfil" class="perfil"><a href="@Url.Action("Login", "Login")">Iniciar Sesión</a></li>
            </ul>
        </nav>
    </header>

    <!-- Sección principal con eslogan -->
    <main class="main-section">
        <div class="content">
            <div class="slogan">
                <h1>Conocimiento sin límites, al alcance de todos.</h1>
                <a href="#" class="btn-primary" id="startQrButton">MIRAR MAS...</a> <!-- Botón para iniciar escaneo -->
            </div>
            <div class="books">
                <img src="~/images/CatalogoLibros.png" alt="Libro 1">
            </div>
        </div>
    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
        <div class="social-icons">
            <a href="#"><img src="~/images/facebook.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/instagram.png" alt="Instagram"></a>
            <a href="#"><img src="~/images/email.png" alt="Correo"></a>
        </div>
    </footer>

    <!-- Enlazar el archivo JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- Asegúrate de que esta URL esté activa -->
    <script>
        $(document).ready(function () {
            // Manejador de clic en el enlace de libros
            $('.libros-link').on('click', function (e) {
                e.preventDefault(); // Evita la navegación predeterminada
                const carreraSeleccionada = localStorage.getItem("carreraSeleccionada");

                if (!carreraSeleccionada) {
                    alert("Por favor inicia sesión escaneando tu código QR para acceder a los libros de tu carrera.");
                } else {
                    // Redirigir a la página correspondiente de la carrera seleccionada
                    const urlCarrera = carreras[carreraSeleccionada].url; // Obtén la URL de la carrera
                    window.location.href = urlCarrera; // Redirige a la URL de la carrera
                }
            });

            // Definir las carreras y sus códigos y URL
            const carreras = {
                "Ingeniería en Tecnologías de la Información": { codigo: "132137", url: "/Tecnologias/Tecnologias" },
                "Ingeniería Industrial": { codigo: "222222", url: "/Industri/Industri" },
                "Ingeniería Mecánica": { codigo: "333333", url: "/Mecanica/Mecanica" },
                "Ingeniería Civil": { codigo: "444444", url: "/Civil/Civil" },
                "Ingeniería en Sistemas Computacionales": { codigo: "555555", url: "/Sistemas/Sistemas" },
                "Licenciatura en Administración": { codigo: "666666", url: "/Administracion/Administracion" },
                "Licenciatura en Psicología": { codigo: "777777", url: "/Psicologia/Psicologia" }
            };
        });
    </script>
</body>
</html>
