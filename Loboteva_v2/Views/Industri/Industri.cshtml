@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ingeniería en Industrial - Loboteca</title>
    <link rel="stylesheet" href="~/css/industri.css">
</head>
<body>
    <!-- Barra de navegación -->
    <header>
        <nav class="navbar">
            <h1>INDUSTRIAL</h1>
        </nav>

        <nav class="navbar2">
            <ul>
                <li><img src="~/images/libros_a.png" alt="Libros" class="libros"> <a href="#">Libros</a></li>
                <li><img src="~/images/revistaIn.png" alt="Revistas" class="revistas"><a href="#revistas">Revistas</a></li>
                <li><img src="~/images/sancionIn.png" alt="Sanciones" class="sanciones"><a href="@Url.Action("Sanciones", "Sanciones")">sanciones</a></li>
                <li><img src="~/images/login_a.png" alt="Perfil" class="perfil"><a href="@Url.Action("Info_user", "Info_user")">Perfil</a></li>
            </ul>
        </nav>
    </header>

    <!-- Sección principal -->
    <main>
        <section class="books-section">
            <div class="section-title">
                <h2>Libros</h2>
            </div>
            <div class="carousel-container">
                <button class="prev" onclick="moveCarousel(-1)">&#10094;</button>
                <div class="carousel">
                    <div class="book">
                        <img src="~/images/indu1.jpg" alt="Libro 1">
                        <p class="available">Disponible</p>
                    </div>
                    <div class="book">
                        <img src="~/images/indu2.jpg" alt="Libro 2">
                        <p class="available">Disponible</p>
                    </div>
                    <div class="book">
                        <img src="~/images/indu3.jpg" alt="Libro 3">
                        <p class="available">Disponible</p>
                    </div>
                </div>
                <button class="next" onclick="moveCarousel(1)">&#10095;</button>
            </div>
        </section>

        <section class="magazines-section" id="revistas">
            <div class="section-title">
                <h2>Revistas</h2>
            </div>
            <div class="carousel-container">
                <button class="prev" onclick="moveCarouselMagazines(-1)">&#10094;</button>
                <div class="carousel">
                    <div class="magazine">
                        <img src="~/images/indu1.jpg" alt="Revista 1">
                        <p class="available">Disponible</p>
                    </div>
                    <div class="magazine">
                        <img src="~/images/indu2.jpg" alt="Revista 2">
                        <p class="available">Disponible</p>
                    </div>
                    <div class="magazine">
                        <img src="~/images/indu3.jpg" alt="Revista 3">
                        <p class="available">Disponible</p>
                    </div>
                </div>
                <button class="next" onclick="moveCarouselMagazines(1)">&#10095;</button>
            </div>
        </section>
    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
        <div class="social-icons">
            <a href="#"><img src="~/images/facebook.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/instagram.png" alt="Instagram"></a>
            <a href="#"><img src="~/images/email.png" alt="Correo"></a>
        </div>
    </footer>

    <script src="~/js/carrusel.js"></script>
</body>
</html>
