@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ingeniería en Tecnologías de la Información - Loboteca</title>
    <link rel="stylesheet" href="~/css/tecnologias.css">
</head>
<body>
    <!-- Barra de navegación -->
    <header>
        <nav class="navbar">
            <h1>TECNOLOGÍAS DE LA INFORMACIÓN</h1>
        </nav>

        <nav class="navbar2">
            <ul>
                <li><img src="~/images/libros_az.png" alt="Libros" class="libros"> <a href="#">Libros</a></li>
                <li><img src="~/images/revista_az.png" alt="Revistas" class="Revistas"><a href="#revistas">Revistas</a></li>
                <li><img src="~/images/sanciones_az.png" alt="Sanciones" class="sanciones"><a href="@Url.Action("Sanciones", "Sanciones")">Sanciones</a></li>
                <li><img src="~/images/login_az.png" alt="Perfil" class="perfil"><a href="@Url.Action("Info_user", "Info_user")">Perfil</a></li>
            </ul>
        </nav>
    </header>

    <!-- Sección principal -->
    <main>
        <section class="books-section">
            <div class="section-title">
                <h2>Libros</h2>
            </div>
            <div class="carousel-container">
                <button class="prev" onclick="moveCarousel(-1)">&#10094;</button>
                <div class="carousel">
                    @foreach (var libro in ViewBag.LibrosRecientes)
                    {
                        <div class="book">
                            <img src="@libro.RutaImagen" alt="@libro.Titulo">
                            <button class="read-button" onclick="window.open('@libro.Archivo', '_blank')">Leer Libro</button>
                            <p class="available">@libro.Estado</p>
                        </div>
                    }
                </div>
                <button class="next" onclick="moveCarousel(1)">&#10095;</button>
            </div>
        </section>

        <section class="magazines-section" id="revistas">
            <div class="section-title">
                <h2>Revistas</h2>
            </div>
            <div class="carousel-container">
                <button class="prev" onclick="moveCarouselMagazines(-1)">&#10094;</button>
                <div class="carousel">
                    @foreach (var revista in ViewBag.RevistasRecientes)
                    {
                        <div class="magazine">
                            <img src="@revista.RutaImagen" alt="@revista.Titulo">
                            <p class="available">@revista.Estado</p>
                        </div>
                    }
                </div>
                <button class="next" onclick="moveCarouselMagazines(1)">&#10095;</button>
            </div>
        </section>
    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
        <div class="social-icons">
            <a href="#"><img src="~/images/facebook.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/instagram.png" alt="Instagram"></a>
            <a href="#"><img src="~/images/email.png" alt="Correo"></a>
        </div>
    </footer>

    <script src="~/js/carrusel.js"></script>
</body>
</html>
