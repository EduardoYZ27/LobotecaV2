@model IEnumerable<Loboteva_v2.Models.Revistum>

@{
    ViewData["Title"] = "Index";
}

<h1>Revistas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nueva revista</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Titulo)</th>
            <th>@Html.DisplayNameFor(model => model.Issn)</th>
            <th>@Html.DisplayNameFor(model => model.FechaDePublicacion)</th>
            <th>@Html.DisplayNameFor(model => model.Genero)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.RutaImagen)</th>
            <th>@Html.DisplayNameFor(model => model.Archivo)</th>
            <th>@Html.DisplayNameFor(model => model.FechaDeAlta)</th>
            <th>@Html.DisplayNameFor(model => model.IdEditorialNavigation.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.IdCarreraNavigation.NombreDeLaCarrera)</th> <!-- Mostrar nombre de la carrera -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                <td>@Html.DisplayFor(modelItem => item.Issn)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaDePublicacion)</td>
                <td>@Html.DisplayFor(modelItem => item.Genero)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>
                    <img src="@item.RutaImagen" alt="Imagen de la revista" style="max-width: 100px;" />
                </td>
                <td><a href="@item.Archivo" target="_blank">Ver PDF</a></td>
                <td>@Html.DisplayFor(modelItem => item.FechaDeAlta)</td>
                <td>@Html.DisplayFor(modelItem => item.IdEditorialNavigation.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.IdCarreraNavigation.NombreDeLaCarrera)</td> <!-- Mostrar nombre de la carrera -->
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
