@model Loboteva_v2.Models.ELibro

@{
    Layout = null;
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles del ELibro - Loboteca</title>
    <link rel="stylesheet" href="~/css/ELibro/ELibroDetails.css" />
</head>
<body>
    <!-- Encabezado principal -->
    <header>
        <nav class="navbar">
            <ul class="logo-left">
                <li>
                    <img src="~/images/logo.png" alt="Logo" class="logo">
                </li>
            </ul>
            <h1>LOBOTECA</h1>
            <ul class="account-right">
                <li>
                    <img src="~/images/cuenta.png" alt="Cuenta" class="icono">
                    <a href="@Url.Action("Perfil", "Perfil")">Cuenta</a>
                </li>
            </ul>
        </nav>
    </header>

    <!-- Contenido principal -->
    <main class="main-section">
        <h2 class="section-title">Detalles del ELibro</h2>

        <div class="formulario-container">
            <h4>ELibro</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Título</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Titulo)</dd>

                <dt class="col-sm-4">ISBN</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Isbn)</dd>

                <dt class="col-sm-4">Fecha de Publicación</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaDePublicacion)</dd>

                <dt class="col-sm-4">Género</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Genero)</dd>

                <dt class="col-sm-4">Estado</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Estado)</dd>

                <dt class="col-sm-4">Imagen</dt>
                <dd class="col-sm-8">
                    <img src="@Model.RutaImagen" alt="Imagen del ELibro" style="max-width: 200px;" />
                </dd>

                <dt class="col-sm-4">Archivo PDF</dt>
                <dd class="col-sm-8">
                    @if (Model.Archivo != null)
                    {
                        <a href="@Model.Archivo" target="_blank">Ver archivo PDF</a>
                    }
                </dd>

                <dt class="col-sm-4">Fecha de Alta</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaDeAlta)</dd>

                <dt class="col-sm-4">Editorial</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IdEditorialNavigation.Nombre)</dd>
            </dl>

            <div class="botones">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-success">Editar</a>
                <a asp-action="Index" class="btn-secondary">Regresar a la lista</a>
            </div>
        </div>
    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
        <div class="social-icons">
            <a href="#"><img src="~/images/facebook.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/instagram.png" alt="Instagram"></a>
            <a href="#"><img src="~/images/email.png" alt="Correo"></a>
        </div>
    </footer>
</body>
</html>
