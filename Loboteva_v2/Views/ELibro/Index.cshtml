@model IEnumerable<Loboteva_v2.Models.ELibro>

@{
    Layout = null;
    ViewData["Title"] = "Lista de ELibros";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de ELibros - Loboteca</title>
    <link rel="stylesheet" href="~/css/ELibro/ELibroIndex.css" />
</head>
<body>
    <!-- Barra de navegación -->
    <header>
        <nav class="navbar">
            <ul class="logo-left">
                <li>
                    <img src="~/images/logo.png" alt="Logo" class="logo">
                </li>
            </ul>
            <h1>LOBOTECA</h1>
            <ul class="account-right">
                <li>
                    <img src="~/images/cuenta.png" alt="Cuenta" class="icono">
                    <a href="@Url.Action("Perfil", "Perfil")">Cuenta</a>
                </li>
            </ul>
        </nav>
    </header>

    <!-- Contenido principal -->
    <main class="main-section">
        <h2 class="section-title">Lista de ELibros</h2>

        <div class="button-container">
            <a asp-action="Create" class="btn btn-success">Crear Nuevo</a>
        </div>

        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                        <th>@Html.DisplayNameFor(model => model.Isbn)</th>
                        <th>@Html.DisplayNameFor(model => model.FechaDePublicacion)</th>
                        <th>@Html.DisplayNameFor(model => model.Genero)</th>
                        <th>@Html.DisplayNameFor(model => model.Estado)</th>
                        <th>@Html.DisplayNameFor(model => model.RutaImagen)</th>
                        <th>@Html.DisplayNameFor(model => model.Archivo)</th>
                        <th>@Html.DisplayNameFor(model => model.FechaDeAlta)</th>
                        <th>@Html.DisplayNameFor(model => model.IdEditorialNavigation.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.IdCarreraNavigation.NombreDeLaCarrera)</th> <!-- Nueva columna para Carrera -->
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Isbn)</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaDePublicacion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Genero)</td>
                            <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.RutaImagen))
                                {
                                    <img src="@item.RutaImagen" alt="Imagen del ELibro" style="max-width: 100px;" />
                                }
                                else
                                {
                                    <span>No image available</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Archivo))
                                {
                                    <a href="@item.Archivo" target="_blank">Ver PDF</a>
                                }
                                else
                                {
                                    <span>No file available</span>
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.FechaDeAlta)</td>
                            <td>@Html.DisplayFor(modelItem => item.IdEditorialNavigation.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.IdCarreraNavigation.NombreDeLaCarrera)</td> <!-- Nueva columna para Carrera -->
                            <td class="acciones">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
        <div class="social-icons">
            <a href="#"><img src="~/images/facebook.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/instagram.png" alt="Instagram"></a>
            <a href="#"><img src="~/images/email.png" alt="Correo"></a>
        </div>
    </footer>
</body>
</html>
